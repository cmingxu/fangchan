.navbar.navbar-inverse.navbar-fixed-top
  .navbar-header
    %button.navbar-toggle{"data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
      %span.sr-only
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

    %a.navbar-brand{:href => "#"}= Setting.site_name
  .navbar-collapse.collapse
    %ul.nav.navbar-nav
      %li.active
        %a{:href => "/"} 首页

      %li
        %a{:href => "/tour"} 功能

      %li
        %a{:href => "/plan"} 付费


    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown"}
          = current_app.name
          %span.caret

        %ul.dropdown-menu{"role" => "menu"}
          - current_client.apps.each do |app|
            %li
              = link_to app.name, switch_app_path(app), :method => :put


      %li.divider-vertical.hidden-xs
      %li
        = link_to "退出", sign_out_path, :method => :delete

